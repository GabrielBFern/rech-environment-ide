  'SUBTRACT 1 TO':
    'prefix': 'SU1'
    'body': 'SUBTRACT 1 TO $2'

  'COMPUTE =':
    'prefix': 'CP'
    'body': 'COMPUTE $1 = $2'

  'COMPUTE ROUNDED =':
    'prefix': 'CR'
    'body': 'COMPUTE ROUNDED $1 = $2'

  'ELSE,':
