  'IS GREATER THAN':
    'prefix': 'GT'
    'body': '$1 IS GREATER THAN $2'

  'IS LESS THAN':
    'prefix': 'LE'
    'body': '$1 IS LESS THAN $2'

  'EVALUATE':
    'prefix': 'EV'
    'body': """
             EVALUATE   $1,
                WHEN $2
             END-EVALUATE.
            """

  'PERFORM UNTIL EXIT':
    'prefix': 'PU'
    'body': """
            PERFORM UNTIL EXIT
                $1
            END-PERFORM.
            """

  'PERFORM VARYING':
     'prefix': 'PB'
     'body': """
     PERFORM                WITH TEST BEFORE
        VARYING             $1 FROM $2 BY $3
           UNTIL            $4
        $5
     END-PERFORM.$6
     """

  'PERFORM VARYING':
     'prefix': 'PB'
